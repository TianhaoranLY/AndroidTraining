<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.wan.t10_swipe_to_refresh">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.wan.t11_swipe_to_refresh.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.wan.t11_swipe_to_refresh.BasicActivity"
            android:label="BasicActivity"
            android:theme="@style/AppTheme.NoActionbar"/>
        <activity
            android:name="com.wan.t11_swipe_to_refresh.ListFragmentActivity"
            android:label="ListFragmentActivity"
            android:theme="@style/AppTheme.NoActionbar"/>
    </application>

</manifest>