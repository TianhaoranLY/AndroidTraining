<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wzc.t23_background_jobs.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Running in a Background Service"
        android:onClick="startIntentService"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading Data in the Background(CursorLoader)"
        android:onClick="loadDataCusorLoader"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Managing Device Awake State"
        android:onClick="manageDeviceAwake"/>

</LinearLayout>
